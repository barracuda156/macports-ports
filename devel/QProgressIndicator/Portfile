destroot {
    set incdir ${destroot}${prefix}/include/${name}
    xinstall -d ${incdir}
    xinstall -m 0644 -W ${worksrcpath} ${name} ${name}.h ${incdir}
    foreach dylib [glob ${worksrcpath}/*.dylib] {
        copy ${dylib} ${destroot}${prefix}/lib
    }
}
