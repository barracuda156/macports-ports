    port:pkgconfig

compiler.cxx_standard 2011

# use only macOS CoreAudio
configure.args-append \
    -DRTAUDIO_API_OSS=OFF \
    -DRTAUDIO_API_PULSE=OFF \
    -DRTAUDIO_API_JACK=OFF
