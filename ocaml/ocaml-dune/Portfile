# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4

PortSystem          1.0
PortGroup           github 1.0
PortGroup           ocaml 1.1

name                ocaml-dune
github.setup        ocaml dune 3.6.0
revision            0
categories          ocaml devel
license             MIT
maintainers         {landonf @landonf} openmaintainer

description         Composable build system for OCaml
long_description    Dune is a build system for OCaml and Reason.

checksums           rmd160  4f3d0036285a4966b72b4fba0bdb490184e1d3cb \
                    sha256  f270331219b0ce6c2caa67d27f8dd3f3336fd802f25069e192ca825066777de4 \
                    size    1840475

patchfiles          patch-fsevents.diff

if { ${subport} eq ${name} } {
    depends_lib         port:ocaml \
                        port:ocaml-findlib
    configure.pre_args
    configure.args      --bindir ${prefix}/bin \
                        --datadir ${prefix}/share/${name} \
                        --docdir ${prefix}/share/doc \
                        --etcdir ${prefix}/etc \
                        --libdir ${ocaml.package_dir} \
                        --mandir ${prefix}/share/man \
                        --sbindir ${prefix}/sbin

    build.target        release
}

subport ocaml-dune-configurator {
    # Sources are broken: they remove internal csexp package, recommending external installation;
    # however, when that is done, Dune fails to find the library: https://github.com/ocaml/dune/issues/6156

    # Notice that this may still fail. Worked for me locally, reproducibility is unsure. Fix it?
    post-extract {
        copy ${filespath}/csexp.opam ${worksrcpath}
        move ${worksrcpath}/vendor/csexp ${worksrcpath}/otherlibs
    }
    patchfiles-append   patch-broken-libs.diff
    ocaml.build_type    dune
}
