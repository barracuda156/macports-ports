PortSystem      1.0

name            xfwm4
version         4.12.5
revision        1
set branch      [join [lrange [split ${version} .] 0 1] .]
categories      xfce
license         GPL-2+
maintainers     nomaintainer
description     The window manager for Xfce
long_description ${description}
homepage        https://www.xfce.org
master_sites    http://archive.xfce.org/src/xfce/${name}/${branch}/
use_bzip2       yes

checksums       sha256  7775c02216666c2d023275e7ed6d85e57d965e5cc1407bb6a05c53cc38d8caca \
                rmd160  ee45996b3be0094ee30d6c8b6ab57b864bc42922 \
                size    1215450

depends_lib-append \
                port:dbus-glib \
                path:lib/pkgconfig/gtk+-2.0.pc:gtk2 \
                port:libglade2 \
                port:libwnck \
                port:libxfce4ui \
                port:xfconf

depends_build-append \
                port:intltool \
                port:pkgconfig \
                port:xfce4-dev-tools

